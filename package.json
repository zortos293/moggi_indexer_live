{
  "name": "monad-indexer",
  "version": "1.0.0",
  "description": "High-performance EVM indexer for Monad blockchain",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && node dist/index.js",
    "fast": "tsx src/fast-index.ts",
    "fast:build": "npm run build && node dist/fast-index.js",
    "db:init": "node -e \"require('better-sqlite3')('monad.db').exec(require('fs').readFileSync('schema.sql', 'utf8'))\"",
    "cli": "tsx src/cli.ts",
    "cli:pg": "tsx src/cli-pg.ts",
    "events": "tsx src/cli-events.ts",
    "pg:drop": "tsx drop-tables.ts",
    "migrate:postgres": "tsx migrate-to-postgres.ts",
    "db:reset": "tsx reset-db.ts --reset",
    "db:fresh": "tsx reset-db.ts --drop",
    "db:schema": "tsx reset-db.ts",
    "decode:old": "tsx decode-old-logs.ts",
    "decode:all": "tsx decode-old-logs.ts --all",
    "migrate:planetscale": "tsx migrate-to-planetscale.ts",
    "migrate:planetscale:clear": "tsx migrate-to-planetscale.ts --clear --force",
    "migrate:planetscale:purge": "tsx migrate-to-planetscale.ts --purge-only",
    "migrate:dump": "tsx migrate-dump.ts --purge",
    "migrate:dump:only": "tsx migrate-dump.ts --dump-only",
    "migrate:dump:import": "tsx migrate-dump.ts --import-only --purge",
    "migrate:copy": "tsx migrate-copy.ts --purge",
    "fix:nft": "tsx scripts/fix-nft-detection.ts",
    "fix:nft:v2": "tsx scripts/fix-nft-detection-v2.ts",
    "fix:missing": "tsx scripts/fix-missing-contracts.ts",
    "backfill:nft": "tsx scripts/backfill-nft-transfers.ts",
    "scan:abi": "tsx src/scan-abi-signatures.ts",
    "extract:events": "tsx src/extract-abi-events.ts",
    "decode:logs": "tsx scripts/decode-logs-fast.ts",
    "fetch:signatures": "tsx scripts/fetch-common-signatures.ts",
    "import:protocols": "tsx scripts/import-protocols.ts",
    "query:contract": "tsx scripts/query-contract.ts",
    "list:protocols": "tsx scripts/list-protocols.ts"
  },
  "keywords": [
    "monad",
    "indexer",
    "blockchain",
    "evm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "ethers": "^6.13.4",
    "pg": "^8.16.3",
    "pg-copy-streams": "^7.0.0",
    "piscina": "^4.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
